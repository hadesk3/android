<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="2dp"
        android:text="Choose Payment Method"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btBack2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#0FB17E"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:drawableRight="@drawable/baseline_event_seat_24"
        android:drawablePadding="2dp"
        android:elevation="4dp"
        android:text="0"
        android:textColor="#111111"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/form5"
        app:layout_constraintEnd_toEndOf="@+id/form5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/baseline_place_24"
        android:elevation="4dp"
        android:gravity="center|center_horizontal"
        android:text="Ha Noi - Ho Chi Minh"
        android:textColor="#111111"
        app:layout_constraintBottom_toBottomOf="@+id/form5"
        app:layout_constraintEnd_toEndOf="@+id/form5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/form5"
        app:layout_constraintTop_toTopOf="@+id/form5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:drawableRight="@drawable/baseline_attach_money_24"
        android:drawablePadding="2dp"
        android:elevation="4dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/form5"
        app:layout_constraintEnd_toEndOf="@+id/form5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/txtTrip"
        app:layout_constraintTop_toTopOf="@+id/form5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/baseline_access_time_24"
        android:drawablePadding="2dp"
        android:elevation="4dp"
        android:gravity="center"
        android:text="5:00 to 9:00"
        android:textColor="#111111"
        app:layout_constraintBottom_toBottomOf="@+id/form5"
        app:layout_constraintEnd_toEndOf="@+id/form5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/form5"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:drawableRight="@drawable/baseline_date_range_24"
        android:drawablePadding="2dp"
        android:elevation="4dp"
        android:gravity="center"
        android:text="05-05-2023"
        android:textAlignment="center"
        android:textColor="#111111"
        app:layout_constraintBottom_toBottomOf="@+id/form5"
        app:layout_constraintEnd_toEndOf="@+id/form5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/form5"
        app:layout_constraintTop_toBottomOf="@+id/txtTrip"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/form5"
        android:layout_width="376dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/view_rounded"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_bias="0.016" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form5"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView3"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please choose your payment."
            android:textSize="18sp"
            android:textStyle="italic" />

        <View
            android:id="@+id/view15"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Amount Payble"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPay"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal|top"
            android:text="0$"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btVNPAY"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/vnpay"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="VNPAY"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view7"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btMomo"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/logo_momo"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Momo"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btVisa"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:drawableLeft="@drawable/visa"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Visa"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btDebit"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/code"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Debit"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btJCB"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/jcb"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="JCB"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view13"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btPaypal"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/paypal"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Paypal"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <TextView
            android:id="@+id/btPaypal2"
            style="Bold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/icons8_money_30"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:text="Cash"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <View
            android:id="@+id/view27"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#474545" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Use Your Coin?"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/swtCoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icons8_coin_24"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingRight="5dp"
                android:text="0"
                android:textColor="#8F5702"
                android:textSize="16sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>