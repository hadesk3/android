<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF8F8"
    android:orientation="vertical">

    <View
        android:id="@+id/user4"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/user3"
        app:layout_constraintTop_toBottomOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/user3"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTicket3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:text="3000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user4"
        app:layout_constraintEnd_toEndOf="@+id/user4"
        app:layout_constraintStart_toStartOf="@+id/user4"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/user4"
        app:layout_constraintEnd_toEndOf="@+id/user4"
        app:layout_constraintStart_toStartOf="@+id/user4"
        app:layout_constraintTop_toTopOf="@+id/user4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icons8_revenue_50" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="Total Number Of Stations"
        app:layout_constraintBottom_toBottomOf="@+id/user3"
        app:layout_constraintEnd_toEndOf="@+id/user3"
        app:layout_constraintStart_toStartOf="@+id/user3"
        app:layout_constraintTop_toBottomOf="@+id/txtUser3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="Total Revenue"
        app:layout_constraintBottom_toBottomOf="@+id/user4"
        app:layout_constraintEnd_toEndOf="@+id/user4"
        app:layout_constraintStart_toStartOf="@+id/user4"
        app:layout_constraintTop_toBottomOf="@+id/txtTicket3" />

    <TextView
        android:id="@+id/txtUser3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        android:text="3000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user3"
        app:layout_constraintEnd_toEndOf="@+id/user3"
        app:layout_constraintStart_toStartOf="@+id/user3"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/user3"
        app:layout_constraintEnd_toEndOf="@+id/user3"
        app:layout_constraintStart_toStartOf="@+id/user3"
        app:layout_constraintTop_toTopOf="@+id/user3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/baseline_place_241" />

    <View
        android:id="@+id/user"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="133dp"
        android:layout_marginBottom="553dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ticket"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/user"
        app:layout_constraintTop_toTopOf="@+id/user"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="@+id/user"
        app:layout_constraintStart_toStartOf="@+id/user"
        app:layout_constraintTop_toTopOf="@+id/user"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/icons8_user_groups_50" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintEnd_toEndOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toTopOf="@+id/ticket"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/icons8_ticket_50" />

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="3000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="@+id/user"
        app:layout_constraintStart_toStartOf="@+id/user"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtTicket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="3000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintEnd_toEndOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="Total Number Of Tickets"
        app:layout_constraintBottom_toBottomOf="@+id/ticket"
        app:layout_constraintEnd_toEndOf="@+id/ticket"
        app:layout_constraintStart_toStartOf="@+id/ticket"
        app:layout_constraintTop_toBottomOf="@+id/txtTicket"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        android:text="Total Number Of Users"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="@+id/user"
        app:layout_constraintStart_toStartOf="@+id/user"
        app:layout_constraintTop_toBottomOf="@+id/txtUser"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/view_rounded"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user3"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/station"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:background="#CDDC39"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/user1"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/user1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btStation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="2"
                android:background="#9FD1E8"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@drawable/baseline_place_241" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ECEAEA"
                android:text="Manage Station"
                android:textAlignment="center"
                android:textColor="#000000" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/user1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="#CDDC39"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/train"
        app:layout_constraintEnd_toStartOf="@+id/station"
        app:layout_constraintStart_toEndOf="@+id/train"
        app:layout_constraintTop_toTopOf="@+id/train">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btUser"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="2"
                android:background="#9FD1E8"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@drawable/baseline_manage_accounts_24" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ECEAEA"
                android:text="Manage Users"
                android:textAlignment="center"
                android:textColor="#000000" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/train"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="#CDDC39"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btTrain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="2"
                android:background="#9FD1E8"
                android:elevation="2dp"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                app:srcCompat="@drawable/baseline_train_24" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ECEAEA"
                android:text="Manage Trains"
                android:textAlignment="center"
                android:textColor="#000000" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>